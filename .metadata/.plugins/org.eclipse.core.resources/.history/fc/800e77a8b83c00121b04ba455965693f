// Default empty project template
import bb.cascades 1.0

// creates one page with a label

Page {
    Container {
        property int bbm_personalmessage: 6
        property int bbm_statusmessage: 7
        property int bbm_invitetodownload: 8
        layout: DockLayout {
        }
        Label {
            text: qsTr("Hello BBM")
            textStyle.base: SystemDefaults.TextStyles.BigText
            verticalAlignment: VerticalAlignment.Top
            horizontalAlignment: HorizontalAlignment.Center
        }
        Container {
            verticalAlignment: VerticalAlignment.Center
            horizontalAlignment: HorizontalAlignment.Center
            Button {
                text: "Personal Msg"
                onClicked: {
                    helloBBM.ControlsForBBM(bbm_personalmessage);
                }
            }
            Button {
                text: "Status Msg"
                onClicked: {
                    helloBBM.ControlsForBBM(bbm_statusmessage);
                }
            }
            Button {
                text: "Invite To Download"
                onClicked: {
                    helloBBM.ControlsForBBM(bbm_invitetodownload);
                }
            }
        }
    }
}
