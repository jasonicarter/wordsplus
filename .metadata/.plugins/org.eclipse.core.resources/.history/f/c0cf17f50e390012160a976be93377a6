                        id: dropDwnTopLeaders
                        text: "Top Leaders"
                        description: "Top notch word finders"
                        onSelectedChanged: {
                            if (selected == true) {
                                var container = leaderDef.createObject();
                                topLeaders.add(container);
                                topLeaders.visible = true;
                                localStats.visible = false;
                            }
                        }
                    }
                    Option {
                        id: dropDwnYourPosition
                        text: "Your Position"
                        description: "How do you measure up to the rest?"
