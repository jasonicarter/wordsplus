                            if (selected == true) {
                                //topLeaders.visible = true;
                            }
                        }
                    }
                    Option {
                        id: dropDwnYourStats
                        text: "Your Stats"
                        description: "Best time, # of words, etc"
                        onSelectedChanged: {
                            if (selected == true) {
                                localStats.visible = true;
                                topLeaders.visible = false;
                                topLeaders.removeAll();
                            }
                        }
                    }
                }
